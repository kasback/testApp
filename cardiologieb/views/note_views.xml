<odoo>
  <data>

    <record model="ir.ui.view" id="cardiologieb.note">
      <field name="name">Notes</field>
      <field name="model">cardiologieb.note</field>
      <field name="arch" type="xml">
          <tree>
                <field name="stat"/>
                <field name="resident" invisible="1"/>
                <field name="note_resident"/>
          </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="cardiologieb.note_form">
      <field name="name">Affecter une note</field>
      <field name="model">cardiologieb.note</field>
      <field name="arch" type="xml">
          <form string="Notes">
              <group>
                <field name="stat"/>
                <field name="resident" attrs="{'invisible':[('id', '==', False)]}"/>
              </group>
              <group>
                  <field name="note_resident"/>
              </group>
          </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="cardiologieb.action_note">
      <field name="name">Notes</field>
      <field name="res_model">cardiologieb.note</field>
      <field name="view_mode">form,tree</field>
    </record>

  </data>
</odoo>